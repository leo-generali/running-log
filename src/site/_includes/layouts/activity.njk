---

<section class='my-12 bg-white p-4 shadow rounded'>
  <h1 class='font-bold text-2xl'>{{ title or "Activity" }}</h1>
  <ul>
    <li>
      {{ formatted.time  }} minutes
    </li>
    <li>
      {{ distance }} miles
    </li>
    <li>
      {{ formatted.pace }} pace
    </li>
  </ul>
</section>

{{ content | safe }}
